// This is your Prisma schema file
// Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============================================
// User & Authentication
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  emailVerified DateTime?
  passwordHash  String?

  // Google Calendar OAuth
  googleAccessToken  String?
  googleRefreshToken String?
  googleTokenExpiry  DateTime?

  // Preferences (stored as JSON)
  preferences Json?
  mbtiType    String? // Stored as string e.g., "INFJ"

  // Relations
  tasks         Task[]
  habits        Habit[]
  journalEntries JournalEntry[]
  calendarEvents CalendarEvent[]
  tags          Tag[]
  categories    Category[] 
  accounts      Account[]
  sessions      Session[]
  moods         Mood[]
  goals         Goal[] 
  insights      Insight[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// NextAuth.js required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// Tasks & Projects (Notion-style)
// ============================================

model Task {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  title       String
  description String?
  status      String   @default("todo") // todo, in_progress, done, archived
  priority    String?  // low, medium, high, critical
  
  // Organization
  order       Float    @default(0) // For Drag & Drop sorting
  category    String?  // work, personal, health, etc.
  
  // Hierarchy (Subtasks)
  parentId    String?
  parent      Task?    @relation("SubTasks", fields: [parentId], references: [id], onDelete: Cascade)
  subtasks    Task[]   @relation("SubTasks")

  // Recurrence & Time
  isRecurring      Boolean  @default(false)
  recurrenceRule   String?  // RRULE string
  dueDate          DateTime?
  startDate        DateTime?
  completedAt      DateTime?
  
  // Duration Tracking (in minutes)
  estimatedDuration Int?
  actualDuration    Int?

  // Personalization
  mbtiContext     Json?    // AI-generated suggestions, type-specific prompts
  
  // Notion-style properties (flexible JSON for custom fields)
  properties  Json?

  // Relations
  tags        Tag[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([status])
  @@index([dueDate])
  @@index([parentId])
}

// ============================================
// Habits & Tracking
// ============================================

model Habit {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  name        String
  description String?
  motivation  String?  // Personal motivation text
  icon        String?  // emoji or icon name
  color       String?  // hex color for visual identity

  // Frequency & Schedule
  frequency   String   @default("daily") // daily, weekly, custom
  targetDays  String?  // JSON array like ["mon", "wed", "fri"]
  timeOfDay   String   @default("anytime") // morning, afternoon, evening, anytime
  startDate   DateTime @default(now())
  endDate     DateTime?

  // Goals
  goalType    String   @default("simple") // simple (yes/no), quantity, duration
  goalTarget  Int?     // e.g., 8 (glasses), 30 (minutes)
  goalUnit    String?  // e.g., "glasses", "minutes"
  
  // Organization
  category    String?  // health, mindfulness, etc.
  reminders   String?  // JSON string of reminder objects

  // Tracking
  streak      Int      @default(0)
  longestStreak Int    @default(0)
  lastCompletedAt DateTime?

  // Relations
  logs        HabitLog[]

  isActive    Boolean  @default(true) // false = archived
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([isActive])
}

model HabitLog {
  id          String   @id @default(cuid())
  habitId     String
  habit       Habit    @relation(fields: [habitId], references: [id], onDelete: Cascade)

  date        DateTime // YYYY-MM-DDT00:00:00Z (normalized date)
  completedAt DateTime @default(now())
  
  status      String   @default("completed") // completed, skipped, missed
  value       Int?     // For quantity/duration goals
  
  note        String?
  mood        String?  // optional mood tracking

  @@unique([habitId, date]) // Ensure one log per habit per day
  @@index([habitId])
  @@index([date])
}

// ============================================
// Journal & Reflections
// ============================================

model JournalEntry {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  title     String?
  content   String   // Rich text stored as JSON or Markdown
  mood      String?  // happy, calm, anxious, reflective, etc.
  wordCount Int?
  
  isArchived Boolean @default(false)
  isPrivate  Boolean @default(false)

  // Relations
  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id])
  deletedAt  DateTime?
  tags      Tag[]
  
  // New Relations
  moodEntry  Mood[]
  goals      Goal[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([createdAt])
}

// ============================================
// Calendar & Events (Google Calendar Sync)
// ============================================

model CalendarEvent {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Google Calendar sync
  googleEventId String?  @unique

  title         String
  description   String?
  location      String?

  startTime     DateTime
  endTime       DateTime
  isAllDay      Boolean  @default(false)

  // Attendees (stored as JSON)
  attendees     Json?

  // Reminders
  reminderMinutes Int?

  // Sync status
  syncStatus    String   @default("synced") // synced, pending, error
  lastSyncedAt  DateTime?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@index([startTime])
  @@index([googleEventId])
}

// ============================================
// Categories & Collections
// ============================================

model Category {
  id        String   @id @default(cuid())
  name      String
  color     String   @default("#a855f7") // Default purple
  icon      String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  entries   JournalEntry[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, name])
  @@index([userId])
}

// ============================================
// Mood Tracking & Analysis
// ============================================

model Mood {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  journalId     String?
  journalEntry  JournalEntry? @relation(fields: [journalId], references: [id])

  moodValue     Int      // 1-10
  emotions      String   // JSON array of strings e.g., ["sad", "anxious"]
  intensity     Int?     // 1-5
  physicalState Json?    // { energy: 5, sleep: 7, exercise: true }
  context       String?  // JSON array e.g., ["work", "health"]
  notes         String?

  recordedAt    DateTime @default(now())
  
  @@index([userId])
  @@index([recordedAt])
}

// ============================================
// Goals & Personal Growth
// ============================================

model Goal {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  title       String
  description String?
  category    String?  // health, career, relationships
  
  targetDate  DateTime?
  status      String   @default("active") // active, paused, completed, abandoned
  progress    Int      @default(0) // 0-100

  // Relations
  linkedEntries JournalEntry[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([status])
}

// ============================================
// AI Insights & Patterns
// ============================================

model Insight {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  type          String   // pattern, growth, value_alignment, mbti_specific
  title         String
  content       String   @default("")
  importance    Int      @default(1) // 1-5

  generatedAt   DateTime @default(now())

  @@index([userId])
}

// ============================================
// Tags (Enhanced)
// ============================================

model Tag {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  name          String
  color         String?
  frequency     Int      @default(1)

  // Relations
  tasks         Task[]
  journalEntries JournalEntry[]

  createdAt     DateTime @default(now())

  @@unique([userId, name])
  @@index([userId])
}
